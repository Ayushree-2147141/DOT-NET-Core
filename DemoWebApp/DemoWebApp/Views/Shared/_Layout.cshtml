

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/temp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="mx-2">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">BMS</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Book">Add Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="RemoveBook">Remove Book</a>
                    </li>

                    <li class="nav-item" id="btn-login">
                        <a class="nav-link text-dark" asp-area="" asp-action="Index" asp-controller="Login">Login</a>
                    </li>
                    <li class="nav-item" id="btn-logout">
                        <a class="nav-link text-dark">Logout</a>
                    </li>
                    
                </ul>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
<script>
    $(document).ready(function () {
        console.log("Hi");
        $.ajax({
            type: "GET",
            url: "/Login/CheckLogin",
            success: function (data) {
                if (data.username) {
                    $('#btn-login').hide();
                } else {
                    $('#btn-logout').hide();
                }
            },
            error: function (data) {
                console.log(data);
            }

        });
    });
</script>